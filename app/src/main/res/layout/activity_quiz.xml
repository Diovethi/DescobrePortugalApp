<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <ImageView
        android:id="@+id/imagemFundo2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:backgroundTint="#8A575757"
        android:backgroundTintMode="add"
        android:elevation="@dimen/cardview_default_elevation"
        android:foreground="@color/cardview_shadow_start_color"
        android:foregroundTint="#9A191919"
        android:foregroundTintMode="screen"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/porto"
        tools:layout_editor_absoluteX="-112dp"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImage"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imagemFundo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagemFundo2"
        app:layout_constraintVertical_bias="0.32999998"
        tools:ignore="MissingConstraints,NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pergunta"
                android:layout_width="285dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="#C6C6C6"
                android:backgroundTint="#A2CFF3"
                android:padding="10dp"
                android:text="@string/este_e_onde_vai_estar_a_pergunta"
                android:textSize="25sp" />

            <Button
                android:id="@+id/resposta1"
                android:layout_width="240dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#1E88E5"
                android:contentDescription="@string/Username"
                android:enabled="true"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView3"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/resposta2"
                android:layout_width="240dp"
                android:layout_height="70dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#1E88E5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resposta1"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/resposta3"
                android:layout_width="240dp"
                android:layout_height="70dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#1E88E5"
                android:contentDescription="@string/Username"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resposta2" />

            <Button
                android:id="@+id/resposta4"
                android:layout_width="240dp"
                android:layout_height="70dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#1E88E5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resposta3"
                tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">

                <Button
                    android:id="@+id/finish"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#3949AB"
                    android:text="Finish" />

                <Button
                    android:id="@+id/Next"
                    android:layout_width="125dp"
                    android:layout_height="50dp"

                    android:backgroundTint="#3949AB"
                    android:text="Next" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>