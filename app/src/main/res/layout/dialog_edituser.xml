                            android:layout_weight="1"
                            android:clickable="true"
                            android:contentDescription="17"
                            android:contextClickable="false"
                            android:onClick="imageClicks"
                            android:padding="2pt"
                            app:srcCompat="@drawable/avatar17" />

                        <ImageView
                            android:id="@+id/imageView18"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:contentDescription="18"
                            android:contextClickable="false"
                            android:onClick="imageClicks"
                            android:padding="2pt"
                            app:srcCompat="@drawable/avatar18" />
                    </LinearLayout>

                </HorizontalScrollView>

                <EditText
                    android:id="@+id/Username"
                    android:layout_width="249dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:backgroundTint="#3949AB"
                    android:ems="10"
                    android:hint="@string/username"
                    android:inputType="textPersonName"
                    android:textColor="#1E88E5"
                    android:textColorHint="#699AC5"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/Password"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#3949AB"
                    android:drawingCacheQuality="high"
                    android:ems="10"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColor="#1E88E5"
                    android:textColorHint="#699AC5"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/Email"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#3949AB"
                    android:ems="10"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColor="#1E88E5"
                    android:textColorHint="#699AC5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Password"
                    tools:ignore="TouchTargetSizeCheck" />

                <Spinner
                    android:id="@+id/Denero"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:animateLayoutChanges="false"
                    android:animationCache="false"
                    android:dropDownWidth="wrap_content"
                    android:textColor="#1E88E5"
                    android:textColorHint="#699AC5"
                    android:touchscreenBlocksFocus="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nTelemovel" />

                <EditText
                    android:id="@+id/dataNasc"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#3949AB"
                    android:ems="10"
                    android:hint="Data Nascimento"
                    android:textColor="#1E88E5"
                    android:textColorHint="#699AC5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="469dp" />

                <EditText
                    android:id="@+id/nTelemovel"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#3949AB"
                    android:ems="10"
                    android:hint="@string/n_telemovel"
                    android:inputType="phone"
                    android:textColor="#1E88E5"
                    android:textColorHint="#699AC5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.552"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dataNasc"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/confirm"
                    android:layout_width="271dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="#3949AB"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="271dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="#1E88E5"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/add_cion"
            android:elevation="10dp"
            android:onClick="addIconClicks"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/add_user" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>