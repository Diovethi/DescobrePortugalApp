<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PontosInteresse">

    <ImageView
        android:id="@+id/imagemFundo2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:backgroundTint="#8A575757"
        android:backgroundTintMode="add"
        android:elevation="@dimen/cardview_default_elevation"
        android:foregroundTintMode="screen"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/porto" />


    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imagemFundo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="@+id/imagemFundo2"
        app:layout_constraintTop_toTopOf="@+id/imagemFundo2"
        app:layout_constraintVertical_bias="0.029"
        app:srcCompat="@drawable/avatar1"
        tools:srcCompat="@drawable/avatar1" />


    <androidx.cardview.widget.CardView
        android:layout_width="345dp"
        android:layout_height="484dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imagemFundo2"
        app:layout_constraintStart_toStartOf="@+id/imagemFundo2"
        app:layout_constraintTop_toTopOf="@+id/imagemFundo2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="527dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Titulo"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

            <ImageView
                android:id="@+id/imagemCidade"
                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:layout_gravity="center_vertical"
                android:visibility="visible"
                tools:srcCompat="@drawable/muralhas"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-170dp"
                android:background="#722196F3" />

            <TextView
                android:id="@+id/labelCidade"
                android:layout_width="334dp"
                android:layout_height="164dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="-1dp"
                android:layout_marginRight="10dp"
                android:background="#FBFBFB"
                android:gravity="center"
                android:textColor="#232323"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btVoltar"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#3949AB"
                    android:text="Voltar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnS"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="363dp" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>