<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PontosInteresse"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/imagemFundo2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:backgroundTint="#8A575757"
        android:backgroundTintMode="add"
        android:elevation="@dimen/cardview_default_elevation"
        android:foreground="@color/cardview_shadow_start_color"
        android:foregroundTint="#9A191919"
        android:foregroundTintMode="screen"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/porto"
        tools:layout_editor_absoluteX="-112dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/Next"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:backgroundTint="#3949AB"
        android:text="Exit"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="680dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/finish"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginStart="208dp"
        android:backgroundTint="#3949AB"
        android:text="Next"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="680dp"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imagemFundo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="@+id/imagemFundo2"
        app:layout_constraintTop_toTopOf="@+id/imagemFundo2"
        app:layout_constraintVertical_bias="0.029">

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:text="Logout"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:text="Nome"
            android:visibility="visible" />

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:text="Edit"
            android:visibility="visible" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="351dp"
        android:layout_height="413dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagemFundo2"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:paddingBottom="20dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="este e um exemplo" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/pergunta"
        android:layout_width="match_parent"
        android:layout_height="436dp"
        android:textSize="25sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="64dp" />

</androidx.constraintlayout.widget.ConstraintLayout>